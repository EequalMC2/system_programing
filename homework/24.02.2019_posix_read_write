#include <stdio.h>
#include <stdlib.h>
#include <fcntl.h>
#include <sys/stat.h>
#include <unistd.h>
#define BUF_SIZE  10

void exit_sys(const char* str);

int main()
{

   int fd1, fd2;
   char buf[BUF_SIZE + 1];
   ssize_t n;

   if((fd1 = open("/home/murat/Desktop/sirketadÄ±.txt",O_RDONLY)) < 0)
       exit_sys("open");

   if((fd2 = open("/home/murat/why1.txt",O_RDWR|O_CREAT|O_EXCL, S_IRUSR|S_IWUSR|S_IRGRP|S_IROTH)) < 0)
      exit_sys("open2");

   while((n = read(fd1, buf, BUF_SIZE)) > 0){
      if((write(fd2, buf, BUF_SIZE)) < 0)
         exit_sys("write");
      buf[n] = '\0';
      fputs(buf, stdout);
      }
   if(n == -1)
      exit_sys("read");
   close(fd1);
   close(fd2);

   return 0;
}

void exit_sys(const char* str)
   {
      perror(str);
      exit(EXIT_FAILURE);

   }

